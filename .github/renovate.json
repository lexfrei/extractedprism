{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Moscow",
  "schedule": ["before 5am on Monday"],
  "labels": ["dependencies"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"],
  "packageRules": [
    {
      "description": "Enable go directive updates in go.mod",
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "matchDepTypes": ["golang"],
      "rangeStrategy": "bump"
    },
    {
      "description": "Group Kubernetes ecosystem dependencies",
      "matchManagers": ["gomod"],
      "matchPackageNames": ["/^k8s\\.io/", "/^sigs\\.k8s\\.io/"],
      "groupName": "Kubernetes dependencies"
    },
    {
      "description": "Group golang.org/x/ dependencies",
      "matchManagers": ["gomod"],
      "matchPackageNames": ["/^golang\\.org\\/x\\//"],
      "groupName": "Go extended libraries"
    },
    {
      "description": "Automerge minor and patch updates for GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "description": "Automerge minor and patch updates for Go dependencies",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Automerge minor and patch updates for container images",
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    }
  ]
}
